pipeline {
echo "Hello world"
  agent any
  stages {
    stage("Build") {
      echo 'Build' 
      if(isUnix()){
        sh 'gradle build --info'
        }
        else{
          bat 'gradle build --info'
        }
      }
      stage("Checkpoint") {
      steps {
        checkpoint 'Completed Build'
      }
    }
      stage("Deploying"){
        steps{
        echo 'Deploying'
        bat 'gradle uploadArchives --info'
      }
     }
  }
}
