pipeline {
print "Hello world"
  agent any
  stages {
    stage("Build") {
      print 'Build' 
      if(isUnix()){
        sh 'gradle build --info'
        }
        else{
          bat 'gradle build --info'
        }
      }
      stage("Checkpoint") {
     
        checkpoint 'Completed Build'
      
    }
      stage("Deploying"){
              print 'Deploying'
        bat 'gradle uploadArchives --info'
      
     }
  }
}
