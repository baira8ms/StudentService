pipeline {
print "Hello world"
  agent any
  stages {
    stage("Build") {
    steps{
      print 'Build' 
      if(isUnix()){
        sh 'gradle build --info'
        }
        else{
          bat 'gradle build --info'
        }
        }
      }
      stage("Checkpoint") {
        steps{
        checkpoint 'Completed Build'
      }
    }
      stage("Deploying"){
       steps
       {
       print 'Deploying'
        bat 'gradle uploadArchives --info'
      }
     }
  }
}
